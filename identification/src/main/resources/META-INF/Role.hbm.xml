<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field">
  <class dynamic-insert="false" dynamic-update="false" mutable="true" name="org.tightsocial.identification.model.Role" optimistic-lock="version" polymorphism="implicit" select-before-update="false">
      <id name="id" type="long">
          <generator class="native"></generator>
      </id>
      <version name="version" type="integer" ></version>
